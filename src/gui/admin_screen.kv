#:kivy 2.2.0
#:import dp kivy.metrics.dp

<AdminScreen@ZFTheme>:
    name: "admin"
    canvas.before:
        Color:
            rgba: self.zf_bg
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"

        # Header
        BoxLayout:
            size_hint_y: None
            height: dp(72)
            padding: dp(8)
            spacing: dp(8)
            canvas.before:
                Color:
                    rgba: self.zf_primary
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: "assets/zf_logo.png"
                size_hint: None, None
                size: dp(56), dp(56)
                allow_stretch: True
                keep_ratio: True

            Label:
                text: "Admin-Modus"
                color: 1, 1, 1, 1
                font_size: "22sp"
                bold: True
                halign: "left"
                valign: "middle"

        BoxLayout:
            orientation: "vertical"
            padding: dp(30)
            spacing: dp(20)

            Label:
                text: "Verwaltung & Systemsteuerung"
                color: self.zf_text
                font_size: "20sp"

            Button:
                text: "Benutzer√ºbersicht"
                size_hint_y: None
                height: dp(50)
                background_normal: ''
                background_color: self.zf_primary
                color: 1, 1, 1, 1
                on_release: root.show_users()

            Button:
                text: "Transaktionen anzeigen"
                size_hint_y: None
                height: dp(50)
                background_normal: ''
                background_color: self.zf_primary
                color: 1, 1, 1, 1
                on_release: root.show_transactions()

            Button:
                text: "Abmelden"
                size_hint_y: None
                height: dp(50)
                background_normal: ''
                background_color: self.zf_error
                color: 1, 1, 1, 1
                on_release: app.return_to_main()