                color: [1, 1, 1, 1]

            Button:
                text: "Einzahlung buchen"
                background_color: 0.102, 0.737, 0.612, 1
                color: [1, 1, 1, 1]

            Button:
                text: "Fehlbuchung stornieren"
                background_color: 0.839, 0.153, 0.157, 1
                color: [1, 1, 1, 1]

        Button:
            text: "Zur√ºck zum Hauptbildschirm"
