<AdminScreen>:
    name: "adminscreen"

    canvas.before:
        Color:
            rgba: root.manager.theme.background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(40)

        Label:
            text: "Adminbereich – CoffeeMaster 9000"
            color: root.manager.theme.text
            font_size: "24sp"
            bold: True

        GridLayout:
            cols: 2
            spacing: dp(10)
            size_hint_y: None
            height: self.minimum_height

            Button:
                text: "Benutzerverwaltung"
                background_color: root.manager.theme.primary
                color: [1, 1, 1, 1]

            Button:
                text: "Kassensaldo anzeigen"
                background_color: root.manager.theme.primary
                color: [1, 1, 1, 1]

            Button:
                text: "Einzahlung buchen"
                background_color: root.manager.theme.success
                color: [1, 1, 1, 1]

            Button:
                text: "Fehlbuchung stornieren"
                background_color: root.manager.theme.error
                color: [1, 1, 1, 1]

        Button:
            text: "Zurück zum Hauptbildschirm"
            background_color: root.manager.theme.primary
            color: [1, 1, 1, 1]
            size_hint_y: None
            height: dp(50)
            on_release: app.switch_to_main()
