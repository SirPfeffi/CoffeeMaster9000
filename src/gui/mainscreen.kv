#:kivy 2.2.0
#:import dp kivy.metrics.dp

<MainScreen@ZFTheme>:
    name: "main"
    canvas.before:
        Color:
            rgba: self.zf_bg
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"

        # Header mit Logo
        BoxLayout:
            size_hint_y: None
            height: dp(72)
            padding: dp(8)
            spacing: dp(8)
            canvas.before:
                Color:
                    rgba: self.zf_primary
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: "assets/zf_logo.png"
                size_hint: None, None
                size: dp(56), dp(56)
                allow_stretch: True
                keep_ratio: True

            Label:
                text: "CoffeeMaster9000"
                color: 1, 1, 1, 1
                font_size: "22sp"
                bold: True
                halign: "left"
                valign: "middle"

        # Inhalt
        BoxLayout:
            orientation: "vertical"
            padding: dp(40)
            spacing: dp(20)

            Label:
                text: "Bitte UID eingeben oder Karte scannen:"
                color: self.zf_text
                font_size: "18sp"
                halign: "center"

            TextInput:
                id: uid_input
                hint_text: "Beispiel: 04A1B2C3D4"
                multiline: False
                font_size: "20sp"
                size_hint_y: None
                height: dp(60)
                background_color: 1, 1, 1, 1
                foreground_color: self.zf_text
                cursor_color: self.zf_primary
                padding: [dp(10), dp(10)]
                on_focus:
                    if self.focus and self.text == self.hint_text: self.text = ""
                    if not self.focus and self.text == "": self.text = self.hint_text

            Button:
                text: "Best√§tigen"
                size_hint_y: None
                height: dp(50)
                background_normal: ''
                background_color: self.zf_primary
                color: 1, 1, 1, 1
                on_release: root.on_rfid(uid_input.text)

            Label:
                id: info_label
                text: ""
                color: self.zf_text
                font_size: "16sp"
                halign: "center"
                valign: "middle"