#:kivy 2.2.0
#:import dp kivy.metrics.dp

<MainScreen@ZFTheme>:
    zf_primary: [0.0, 0.34, 0.72, 1]      # ZF Blau
    zf_bg: [0.90, 0.91, 0.94, 1]          # Hellgrau
    zf_text: [0.12, 0.12, 0.12, 1]        # Dunkelgrau
    zf_success: [0.10, 0.73, 0.61, 1]     # Gr√ºnlich
    zf_error: [0.83, 0.15, 0.16, 1]       # Rot
    name: "main_screen"

    canvas.before:
        Color:
            rgba: self.zf_bg
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(40)

        # ZF Logo
        Image:
            source: "assets/zf_logo.png"
            size_hint_y: None
            height: dp(100)
            allow_stretch: True
            keep_ratio: True

        Label:
            text: "Willkommen beim CoffeeMaster 9000"
            font_size: "24sp"
            color: root.zf_text
            bold: True
            halign: "center"

        TextInput:
            id: uid_input
            hint_text: "Beispiel: 04A1B2C3D4"
            multiline: False
            size_hint_y: None
            height: dp(48)
            background_color: [1, 1, 1, 1]
            foreground_color: root.zf_text
            on_focus: if self.focus: self.text = "" if self.text == self.hint_text else self.text

        BoxLayout:
            size_hint_y: None
            height: dp(60)
            spacing: dp(15)

            Button:
                text: "Login"
                background_color: root.zf_primary
                color: [1, 1, 1, 1]
                on_release: app.login_with_uid(uid_input.text)

            Button:
                text: "Abbrechen"
                background_color: root.zf_error
                color: [1, 1, 1, 1]
                on_release: uid_input.text = uid_input.hint_text

        Label:
            id: status_label
            text: ""
            color: root.zf_text
            font_size: "16sp"
            halign: "center"
            valign: "middle"

        Widget:
            size_hint_y: 0.3