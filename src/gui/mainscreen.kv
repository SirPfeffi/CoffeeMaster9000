#:kivy 2.2.0

<ZFStyles@BoxLayout>:
    zf_primary: 0.0, 0.34, 0.72, 1        # ZF-Blau (#0057B7)
    zf_bg: 0.898, 0.91, 0.941, 1          # Hellgrau (#E5E9F0)
    zf_text: 0.118, 0.118, 0.118, 1       # Textfarbe (#1E1E1E)
    zf_success: 0.102, 0.737, 0.612, 1    # Grünlich (#1ABC9C)
    zf_error: 0.839, 0.153, 0.157, 1      # Rot (#D62828)

<MainScreen>:
    name: "main"
    canvas.before:
        Color:
            rgba: self.zf_bg
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"

        # Header mit ZF-Logo
        BoxLayout:
            size_hint_y: None
            height: dp(72)
            padding: dp(8)
            spacing: dp(8)
            canvas.before:
                Color:
                    rgba: self.zf_primary
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: "assets/zf_logo.png"
                size_hint: None, None
                size: dp(56), dp(56)
                allow_stretch: True

            Label:
                text: "CoffeeMaster9000"
                color: 1, 1, 1, 1
                font_size: "22sp"
                bold: True
                halign: "left"
                valign: "middle"

        # Hauptinhalt
        BoxLayout:
            orientation: "vertical"
            padding: dp(40)
            spacing: dp(20)

            Label:
                text: "Bitte UID eingeben oder Karte scannen:"
                color: root.zf_text
                font_size: "18sp"
                halign: "center"

            TextInput:
                id: uid_input
                hint_text: "Beispiel: 04A1B2C3D4"
                on_text_validate: root.process_uid(uid_input.text)
                multiline: False
                font_size: "20sp"
                size_hint_y: None
                height: dp(60)
                background_color: 1, 1, 1, 1
                foreground_color: root.zf_text
                cursor_color: root.zf_primary
                padding: [dp(10), dp(10)]
                on_focus: if self.focus and self.text == self.hint_text: self.text = ""

            Button:
                text: "Bestätigen"
                size_hint_y: None
                height: dp(50)
                background_color: root.zf_primary
                color: 1, 1, 1, 1
                on_release: root.process_uid(uid_input.text)

            Label:
                id: info_label
                text: ""
                color: root.zf_text
                font_size: "16sp"
                halign: "center"
                valign: "middle"
