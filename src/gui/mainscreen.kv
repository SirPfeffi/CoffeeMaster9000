<MainScreen>:
    name: "mainscreen"

    canvas.before:
        Color:
            rgba: (0.1, 0.5, 0.9, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(40)

        Label:
            text: "Willkommen beim CoffeeMaster 9000"
            font_size: "24sp"
            bold: True

        TextInput:
            id: uid_input
            hint_text: "Beispiel: 04A1B2C3D4"
            multiline: False
            size_hint_y: None
            height: dp(48)
            background_color: [1, 1, 1, 1]
            foreground_color: [0.5, 0.5, 0.5, 1]
            on_focus:
                if self.focus: self.text = "" if self.text == self.hint_text else self.text

        Button:
            text: "Login"
            size_hint_y: None
            height: dp(50)
            on_release: app.on_rfid_scan(uid_input.text)

        Button:
            text: "Adminmodus (Test)"
            size_hint_y: None
            height: dp(50)
            on_release: app.root.current = "adminscreen"
